<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.user.RegisterActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="28dip"
        android:src="@mipmap/back" />
    <!--手机号码start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:src="@mipmap/pop_shoujihaoma" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="14dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="#dcdcdc"></View>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dip"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:maxLength="11"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="200dip"
                android:layout_height="1dip"
                android:layout_marginLeft="18dip"
                android:layout_marginTop="10dip"
                android:background="#dcdcdc"></View>
        </LinearLayout>
    </LinearLayout>
    <!--手机号码end-->

    <!--输入验证码start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:src="@mipmap/icon_yanzhnegma" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/code"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:maxLength="11"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/send_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="26dip"
                    android:background="@null"
                    android:gravity="right"
                    android:text="获取验证码"
                    android:textColor="#F866AA" />
            </LinearLayout>

            <View
                android:layout_width="200dip"
                android:layout_height="1dip"
                android:layout_marginLeft="18dip"
                android:layout_marginTop="10dip"
                android:background="#dcdcdc"></View>
        </LinearLayout>
    </LinearLayout>
    <!--输入验证码end-->

    <!--输入密码start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:src="@mipmap/ion_shurumima" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dip"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="200dip"
                android:layout_height="1dip"
                android:layout_marginLeft="18dip"
                android:layout_marginTop="10dip"
                android:background="#dcdcdc"></View>
        </LinearLayout>
    </LinearLayout>
    <!--输入密码end-->

    <!--再次输入密码start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:src="@mipmap/ion_shurumima" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sure_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dip"
                    android:background="@null"
                    android:hint="请输入确认密码"
                    android:inputType="textPassword"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="200dip"
                android:layout_height="1dip"
                android:layout_marginLeft="18dip"
                android:layout_marginTop="10dip"
                android:background="#dcdcdc"></View>
        </LinearLayout>
    </LinearLayout>
    <!--再次输入密码end-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="隐私政策"
            android:textColor="#F866AA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/user_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dip"
            android:text="用户协议"
            android:textColor="#F866AA"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_login"
        android:layout_width="260dip"
        android:layout_height="46dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dip"
        android:background="@drawable/shape_login_bt"
        android:text="注册/登录"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>