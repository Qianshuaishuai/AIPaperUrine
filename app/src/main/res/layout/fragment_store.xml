<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f3f7"
    tools:context=".ui.main.StoreFragment">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="188dip"
        android:background="@mipmap/bg_geren"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="22dip"
            android:text="商城"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <com.youth.banner.Banner
        app:image_scale_type="fit_center"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="145dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="72dip"
        android:layout_marginRight="15dip"
        app:indicator_drawable_selected="@drawable/shape_banner_indicator_selected"
        app:indicator_drawable_unselected="@drawable/shape_banner_indicator_unselected"
        app:indicator_margin="3dip" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="24dip"
        android:text="商品列表"
        android:textColor="#1e1e1e"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:paddingBottom="60dip"></android.support.v7.widget.RecyclerView>
</RelativeLayout>