<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pay.PayActivity">


    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="101dip"
        android:background="@mipmap/bg_dingbu_beijing"
        android:orientation="horizontal"
        android:paddingTop="24dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back_baise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="订单支付"
            android:textColor="#ffffff"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dip"
        android:background="@drawable/shape_urine_detail_common_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dip"
                android:text="需支付"
                android:textColor="#999999"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dip"
                android:text="￥123.10"
                android:textColor="#1E1E1E"
                android:textSize="32dip"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/group_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dip"
                    android:layout_marginTop="80dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34dip"
                        android:layout_height="34dip"
                        android:layout_marginLeft="27dip"
                        android:src="@mipmap/icon_weixinzhifu_nor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="微信支付"
                        android:textColor="#1E1E1E"
                        android:textSize="16dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/rb_pay_1"
                            android:layout_width="34dip"
                            android:layout_height="34dip"
                            android:layout_marginRight="27dip"
                            android:background="@drawable/select_pay_bt"
                            android:button="@null"
                            android:checked="true" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dip"
                    android:layout_marginTop="34dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34dip"
                        android:layout_height="34dip"
                        android:layout_marginLeft="27dip"
                        android:src="@mipmap/icon_zhifubaozhifu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="支付宝支付"
                        android:textColor="#1E1E1E"
                        android:textSize="16dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/rb_pay_2"
                            android:layout_width="34dip"
                            android:layout_height="34dip"
                            android:layout_marginRight="27dip"
                            android:background="@drawable/select_pay_bt"
                            android:button="@null" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="34dip"
            android:layout_marginRight="34dip"
            android:layout_marginBottom="48dip"
            android:background="@drawable/shape_good_button_bg"
            android:text="确认支付"
            android:textColor="#ffffff"
            android:textSize="16dip" />
    </RelativeLayout>
</RelativeLayout>