<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.info.UrineDetailActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="189dip"
        android:background="@mipmap/bg_dingbu_beijing"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_marginLeft="15dip"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="数据中心"
                android:textColor="#1e1e1e"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginRight="15dip"
                    android:src="@mipmap/btn_fenxiang" />
            </LinearLayout>
        </LinearLayout>

        <!--日期选择-->
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="36dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bt1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:text="当日"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/bt2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="@null"
                android:button="@null"
                android:text="近 7 日"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/bt3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="@null"
                android:button="@null"
                android:text="近 14 日"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/bt4_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="@null"
                android:button="@null"
                android:text="近 30 日"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05.19"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="12dip"
                    android:layout_height="15dip"
                    android:layout_marginRight="15dip"
                    android:src="@mipmap/iconmonstr_angel_right_thin_riqi" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>