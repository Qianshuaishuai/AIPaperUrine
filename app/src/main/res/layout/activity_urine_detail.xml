<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f6f2"
    android:orientation="vertical"
    tools:context=".ui.info.UrineDetailActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="189dip"
        android:background="@mipmap/bg_dingbu_beijing"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_marginLeft="15dip"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="数据中心"
                android:textColor="#1e1e1e"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right">

                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginRight="15dip"
                    android:src="@mipmap/btn_fenxiang"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!--日期选择-->
        <RadioGroup
            android:id="@+id/group_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="36dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bt1_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:text="日"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/bt2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dip"
                android:background="@null"
                android:button="@null"
                android:text="周"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/bt3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dip"
                android:background="@null"
                android:button="@null"
                android:text="半月"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/bt4_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dip"
                android:background="@null"
                android:button="@null"
                android:text="月"
                android:textColor="@color/select_urine_detail_date"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tab_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择日期"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="12dip"
                    android:layout_height="15dip"
                    android:layout_marginRight="15dip"
                    android:src="@mipmap/iconmonstr_angel_right_thin_riqi" />
            </LinearLayout>
        </RadioGroup>

        <!--内容选择-->
        <RadioGroup
            android:id="@+id/group_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="15dip"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bt1_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_urine_detail_type"
                android:button="@null"
                android:checked="true"
                android:padding="10dip"
                android:text="用片统计"
                android:textColor="@color/select_urine_detail_type"
                android:textSize="14sp" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@null"></View>

            <RadioButton
                android:id="@+id/bt2_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_urine_detail_type"
                android:button="@null"
                android:padding="10dip"
                android:text="尿量统计"
                android:textColor="@color/select_urine_detail_type"
                android:textSize="14sp" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@null"></View>

            <RadioButton
                android:id="@+id/bt3_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_urine_detail_type"
                android:button="@null"
                android:padding="10dip"
                android:text="强提醒次数"
                android:textColor="@color/select_urine_detail_type"
                android:textSize="14sp" />

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="@null"></View>

            <RadioButton
                android:id="@+id/bt4_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_urine_detail_type"
                android:button="@null"
                android:padding="10dip"
                android:text="更换记录"
                android:textColor="@color/select_urine_detail_type"
                android:textSize="14sp" />

        </RadioGroup>
    </LinearLayout>

    <!--用片统计start-->
    <ScrollView
        android:id="@+id/layout_detail1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="14.5dip"
                android:background="@drawable/shape_dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:text="数据详情"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/data_detail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="18dip"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="14.5dip"
                android:background="@drawable/shape_dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:text="数据分析"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text="数据点评"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/data_detail_tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="12dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text="改进意见"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/data_detail_tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--用片统计end-->

    <!--尿量统计start-->
    <ScrollView
        android:id="@+id/layout_detail2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="14.5dip"
                android:background="@drawable/shape_dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:text="数据详情"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/data_detail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="18dip"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="14.5dip"
                android:background="@drawable/shape_dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:text="数据分析"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text="数据点评"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/data_detail2_tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="12dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text="改进意见"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/data_detail2_tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--尿量统计end-->

    <!--强提醒次数start-->
    <ScrollView
        android:id="@+id/layout_detail3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="14.5dip"
                android:background="@drawable/shape_dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:text="数据详情"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/data_detail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="18dip"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dip"
                android:layout_marginTop="10dip"
                android:layout_marginRight="14.5dip"
                android:background="@drawable/shape_dialog_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="20dip"
                    android:text="数据分析"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text="数据点评"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/data_detail3_tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="12dip"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text="改进意见"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/data_detail3_tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="20dip"
                        android:text=""
                        android:textColor="#666666"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--强提醒次数end-->

    <!--更换记录start-->
    <LinearLayout
        android:id="@+id/layout_detail4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_detail4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <!--更换记录end-->
</LinearLayout>