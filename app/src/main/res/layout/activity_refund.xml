<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f3f7"
    tools:context=".ui.order.RefundActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="101dip"
        android:background="@mipmap/bg_dingbu_beijing"
        android:orientation="horizontal"
        android:paddingTop="24dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back_baise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="退款"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="72dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_urine_detail_common_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="12dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单时间:"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dip"
                    android:text=""
                    android:textColor="#1e1e1e"
                    android:textSize="18sp" />
            </LinearLayout>
            <!--退款件数-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="12dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款件数:"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_reduce"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:src="@mipmap/btn_shangpinshu_jianshu" />

                    <TextView
                        android:id="@+id/simple_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dip"
                        android:layout_marginRight="12dip"
                        android:text="0"
                        android:textColor="#1e1e1e"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:layout_marginRight="15dip"
                        android:src="@mipmap/btn_shangpinshu_jiashu" />
                </LinearLayout>
            </LinearLayout>
            <!--是否收到货-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="12dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否收到货:"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/group_receive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_receive_1"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:background="@drawable/select_pay_bt"
                        android:button="@null"
                        android:checked="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dip"
                        android:text="未收到货"
                        android:textColor="#1e1e1e"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_receive_2"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:layout_marginLeft="32dip"
                        android:background="@drawable/select_pay_bt"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.5dip"
                        android:text="已收到货"
                        android:textColor="#1e1e1e"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="12dip"
                android:layout_marginBottom="12dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额:"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dip"
                    android:text=""
                    android:textColor="#f866aa"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="245dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_urine_detail_common_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_reason"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                android:layout_marginRight="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="退款原因"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/reason_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginLeft="98dip"
                    android:background="@drawable/shape_refund_select_bg">

                    <TextView
                        android:id="@+id/reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dip"
                        android:text="多拍/拍错/不想要"
                        android:textColor="#1e1e1e"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@mipmap/iconmonstr_right_chakanxiangqing" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dip"
                android:layout_below="@+id/layout_reason"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="15dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/shape_refund_edit_bg">

                <EditText
                    android:id="@+id/sign_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="10dip"
                    android:background="@null"
                    android:hint="输入详细退款原因..."
                    android:maxLines="5"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sign_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="10dip"
                    android:text="0/100"
                    android:textColor="#d4d4d4"
                    android:textSize="12sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_select_reason"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="56dip"
                android:background="@drawable/shape_refund_edit_bg"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="15dip"
            android:text="上传图片"
            android:textColor="#666666"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_refund_photo"
            android:layout_width="match_parent"
            android:layout_height="126dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_urine_detail_common_bg"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip"
        android:layout_marginBottom="30dip"
        android:background="@drawable/shape_good_button_bg"
        android:text="提交申请"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/layout_big_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4e000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_photo"
            android:layout_width="match_parent"
            android:layout_height="136dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_select_photo_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/take_photo"
                android:layout_width="match_parent"
                android:layout_height="68dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="拍照"
                android:textColor="#333333"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/select_photo"
                android:layout_width="match_parent"
                android:layout_height="68dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="手机相册选择"
                android:textColor="#333333"
                android:textSize="16sp"></TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>