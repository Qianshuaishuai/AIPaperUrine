<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_shuizi_beijing"
    tools:context=".ui.info.SleepPostureActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="18dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="睡姿"
            android:textColor="#1e1e1e"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/middle_iv"
        android:layout_width="206dip"
        android:layout_height="201dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dip"
        android:src="@mipmap/img_baobaoyangshui_da" />

    <TextView
        android:id="@+id/middle_tv"
        android:layout_width="206dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/middle_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"
        android:gravity="center_horizontal"
        android:text="宝宝仰睡"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="115dip"
            android:layout_height="97dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pos_iv1"
                android:layout_width="115dip"
                android:layout_height="73dip"
                android:src="@mipmap/img_baobaozuotang_xiao" />

            <TextView
                android:id="@+id/pos_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="宝宝左躺"
                android:textColor="#1e1e1e"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dip"
            android:layout_height="97dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pos_iv2"
                android:layout_width="115dip"
                android:layout_height="73dip"
                android:src="@mipmap/img_baobaoyoutang_xiao" />

            <TextView
                android:id="@+id/pos_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="宝宝右躺"
                android:textColor="#1e1e1e"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dip"
            android:layout_height="97dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pos_iv3"
                android:layout_width="115dip"
                android:layout_height="73dip"
                android:src="@mipmap/img_baobaopashui_xiao" />

            <TextView
                android:id="@+id/pos_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:text="宝宝趴睡"
                android:textColor="#1e1e1e"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>