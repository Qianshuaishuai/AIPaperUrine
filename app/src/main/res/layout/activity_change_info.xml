<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    tools:context=".ui.info.ChangeInfoActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="134dip"
        android:background="@mipmap/bg_dingbu_beijing"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_marginLeft="15dip"
                android:src="@mipmap/back_baise" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="我的资料"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="365dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="76dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/shape_info_card_bg"
        android:orientation="vertical">
        <!--头像-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="更换头像"
                android:textColor="#1e1e1e"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="55dip"
                    android:layout_height="55dip"
                    android:layout_marginRight="15dip">

                    <ImageView
                        android:id="@+id/card_icon"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:src="@mipmap/img_tianjiabaobaoxinxi" />

                    <ImageView
                        android:layout_width="22dip"
                        android:layout_height="22dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/icon_bianjitouxiang" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="#fbfbfb"></View>
        <!--昵称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="昵称"
                android:textColor="#333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入昵称"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!--性别-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/group_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/bt1_sex"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:background="@drawable/select_sex_male"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center" />


                    <RadioButton
                        android:id="@+id/bt2_sex"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_marginLeft="16dip"
                        android:background="@drawable/select_sex_female"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <!--出生日期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="出生日期"
                android:textColor="#333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:text="2019-05-30"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!--宝宝ID-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="宝宝  ID"
                android:textColor="#333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_baby_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:text="1232wwwkjilkjzd"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!--尺码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="尺码"
                android:textColor="#333333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:text="M"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="307dip"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dip"
        android:layout_marginBottom="48dip"
        android:background="@drawable/shape_login_bt"
        android:stateListAnimator="@null"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/layout_date_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0000000"
        android:visibility="gone">

        <cn.aigestudio.datepicker.views.DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"></cn.aigestudio.datepicker.views.DatePicker>
    </RelativeLayout>
</RelativeLayout>