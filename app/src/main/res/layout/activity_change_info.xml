<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.info.ChangeInfoActivity">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="134dip"
        android:background="@mipmap/bg_dingbu_beijing"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_back_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_marginLeft="15dip"
                android:src="@mipmap/back_baise" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="我的资料"
                android:textColor="#ffffff"
                android:textSize="18dip" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dip"
        android:layout_marginTop="76dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/shape_info_card_bg"
            android:orientation="vertical"
            android:paddingBottom="65dip">
            <!--头像-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="更换头像"
                    android:textColor="#1e1e1e"
                    android:textSize="16dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_header"
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:layout_marginRight="15dip">

                        <ImageView
                            android:id="@+id/card_icon"
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:src="@mipmap/img_tianjiabaobaoxinxi" />

                        <ImageView
                            android:layout_width="22dip"
                            android:layout_height="22dip"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/icon_bianjitouxiang" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:background="#fbfbfb"></View>
            <!--昵称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="昵称"
                    android:textColor="#333333"
                    android:textSize="16dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入昵称"
                        android:textColor="#999999"
                        android:textSize="13dip" />
                </LinearLayout>
            </LinearLayout>

            <!--性别-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="性别"
                    android:textColor="#333333"
                    android:textSize="16dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/group_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/bt1_sex"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:background="@drawable/select_sex_male"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center" />


                        <RadioButton
                            android:id="@+id/bt2_sex"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_marginLeft="16dip"
                            android:background="@drawable/select_sex_female"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!--出生日期-->
            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="match_parent"
                android:layout_height="56dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="出生日期"
                    android:textColor="#333333"
                    android:textSize="16dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:text="2019-05-30"
                        android:textColor="#999999"
                        android:textSize="13dip" />
                </LinearLayout>
            </LinearLayout>

            <!--宝宝ID-->
            <LinearLayout
                android:id="@+id/layout_city"
                android:layout_width="match_parent"
                android:layout_height="56dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="所在城市"
                    android:textColor="#333333"
                    android:textSize="16dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="13dip" />
                </LinearLayout>
            </LinearLayout>

            <!--尺码-->
            <LinearLayout
                android:id="@+id/layout_sign"
                android:layout_width="match_parent"
                android:layout_height="56dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="签名"
                    android:textColor="#333333"
                    android:textSize="16dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="13dip" />
                </LinearLayout>
            </LinearLayout>

            <!--邮箱-->
            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dip"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="邮箱"
                        android:textColor="#333333"
                        android:textSize="16dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/card_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:text="未绑定"
                            android:textColor="#999999"
                            android:textSize="13dip" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/email_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginBottom="16dip"
                    android:text="绑定邮箱地址是为了在宝宝发生危险时，能够第一时间向您发送危险通知。"
                    android:textColor="#F97EB7"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/commit"
        android:layout_width="307dip"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dip"
        android:layout_marginBottom="32dip"
        android:background="@drawable/shape_login_bt"
        android:stateListAnimator="@null"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="16dip" />

    <RelativeLayout
        android:id="@+id/layout_date_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b0000000"
        android:visibility="gone">

        <cn.aigestudio.datepicker.views.DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"></cn.aigestudio.datepicker.views.DatePicker>
    </RelativeLayout>

    <!--手机相册拍照-->
    <RelativeLayout
        android:id="@+id/layout_big_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4e000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_photo"
            android:layout_width="match_parent"
            android:layout_height="136dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_select_photo_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/take_photo"
                android:layout_width="match_parent"
                android:layout_height="68dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="拍照"
                android:textColor="#333333"
                android:textSize="16dip"></TextView>

            <TextView
                android:id="@+id/select_photo"
                android:layout_width="match_parent"
                android:layout_height="68dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="手机相册选择"
                android:textColor="#333333"
                android:textSize="16dip"></TextView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>