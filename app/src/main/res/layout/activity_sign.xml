<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_qiandao_beijing"
    tools:context=".ui.person.SignActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="wrap_content"
        android:layout_height="72dip"
        android:orientation="horizontal"
        android:paddingTop="28dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back_baise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="18dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip_layout"
        android:layout_width="238.5dip"
        android:layout_height="31dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dip"
        android:layout_marginBottom="15dip"
        android:background="@mipmap/img_meiriqiandao_touming"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日签到，天天都有惊喜哦~"
            android:textColor="#ffffff"
            android:textSize="15dip" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_date"
        android:layout_width="345dip"
        android:layout_height="300dip"
        android:layout_below="@+id/tip_layout"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/img_qiandaorili_shu"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dip"
            android:layout_marginTop="56dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sign_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#1e1e1e"
                android:textSize="24dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已连续签到/天"
                android:textColor="#1e1e1e"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="56dip"
            android:layout_marginRight="48dip"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/integral_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="562"
                android:textColor="#1e1e1e"
                android:textSize="24dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分"
                android:textColor="#1e1e1e"
                android:textSize="14dip" />
        </LinearLayout>

        <Button
            android:id="@+id/sign"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dip"
            android:background="@drawable/shape_sign_bt_bg"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="16dip"
            android:visibility="gone" />

        <Button
            android:id="@+id/sign_complete"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dip"
            android:background="@drawable/shape_sign_bt_selected_bg"
            android:text="已签到"
            android:textColor="#F866AA"
            android:textSize="16dip" />

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv_sign"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"></android.support.v7.widget.RecyclerView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="22dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:src="@mipmap/icon_jifen_press" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#999999"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="0dip"
                android:layout_height="3dip"
                android:layout_marginTop="11dip"
                android:layout_weight="1"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:src="@mipmap/icon_jifen_press" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#999999"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="0dip"
                android:layout_height="3dip"
                android:layout_marginTop="11dip"
                android:layout_weight="1"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:src="@mipmap/icon_jifen_press" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#999999"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="0dip"
                android:layout_height="3dip"
                android:layout_marginTop="11dip"
                android:layout_weight="1"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:src="@mipmap/icon_jifen_press" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#999999"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="0dip"
                android:layout_height="3dip"
                android:layout_marginTop="11dip"
                android:layout_weight="1"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:src="@mipmap/icon_jifen_press" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#999999"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="0dip"
                android:layout_height="3dip"
                android:layout_marginTop="11dip"
                android:layout_weight="1"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:src="@mipmap/icon_jifen_press" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="#999999"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="0dip"
                android:layout_height="3dip"
                android:layout_marginTop="11dip"
                android:layout_weight="1"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="26dip"
                    android:layout_height="26dip"
                    android:src="@mipmap/icon_jifen_press" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="#999999"
                    android:textSize="14dip" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>