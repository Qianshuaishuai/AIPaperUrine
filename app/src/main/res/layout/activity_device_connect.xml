<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f6f9"
    android:orientation="vertical"
    tools:context=".ui.baby.DeviceConnectActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="12dip"
        android:paddingBottom="12dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="设备连接"
            android:textColor="#1e1e1e"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="223dip"
        android:layout_height="223dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dip">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="223dip"
            android:layout_height="223dip"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_device_connect_bg1"
            android:visibility="gone">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="191dip"
            android:layout_height="191dip"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_device_connect_bg2"
            android:visibility="gone">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="153dip"
            android:layout_height="153dip"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_device_connect_bg3"
            android:visibility="gone">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="114dip"
            android:layout_height="114dip"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_device_connect_bg4"
            android:visibility="gone">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout5"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_device_connect_bg5"
            android:visibility="gone">

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设备连接中..."
            android:textColor="#1e1e1e"
            android:textSize="13sp" />
    </RelativeLayout>


</RelativeLayout>
