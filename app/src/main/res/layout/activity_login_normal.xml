<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/code_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="15dip"
            android:text="验证码登录"
            android:textColor="#1E1E1E"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="122dip"
            android:layout_height="122dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dip"
            android:background="#ff00ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:layout_marginTop="36dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:layout_marginRight="18dip"
                    android:src="@mipmap/pop_shoujihaoma" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="14dip"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:background="#dcdcdc"></View>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dip"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:maxLength="11"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="200dip"
                android:layout_height="1dip"
                android:layout_marginLeft="22dip"
                android:layout_marginTop="8dip"
                android:background="#dcdcdc"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:layout_marginTop="18dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:src="@mipmap/pop_shurumima" />

                <FrameLayout
                    android:layout_width="214dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dip">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:background="@null"
                        android:hint="请输入登录密码"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:textColor="#1E1E1E"
                        android:textSize="16sp" />

                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="200dip"
                android:layout_height="1dip"
                android:layout_marginLeft="22dip"
                android:background="#dcdcdc"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="注册"
                android:textColor="#F866AA"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dip"
                android:text="忘记密码"
                android:textColor="#F866AA"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="260dip"
            android:layout_height="46dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dip"
            android:background="@drawable/shape_login_bt"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="首次登录将自动注册"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="其他登录方式"
            android:textColor="#666666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/wechat"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_marginTop="18dip"
            android:layout_marginBottom="30dip"
            android:src="@mipmap/ic_common_wechat_logo" />
    </LinearLayout>
</RelativeLayout>