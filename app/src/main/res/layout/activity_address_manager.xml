<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.address.AddressManagerActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="18dip"
        android:paddingBottom="18dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="收货地址"
            android:textColor="#1e1e1e"
            android:textSize="18dip" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_back"
        android:layout_marginTop="0.5dip"
        android:layout_marginBottom="100dip"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/build"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="34dip"
        android:layout_marginRight="34dip"
        android:layout_marginBottom="30dip"
        android:background="@drawable/shape_good_button_bg"
        android:text="新建收货地址"
        android:textColor="#ffffff"
        android:textSize="16dip" />
</RelativeLayout>