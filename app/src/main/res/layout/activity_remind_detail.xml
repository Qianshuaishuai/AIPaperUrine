<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f3f7"
    tools:context=".ui.info.RemindDetailActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="101dip"
        android:background="@mipmap/bg_dingbu_beijing"
        android:orientation="horizontal"
        android:paddingTop="40dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back_baise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="提醒详情"
            android:textColor="#ffffff"
            android:textSize="18dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="269dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="80dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/shape_device_remind_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/remind_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dip"
            android:text="提醒内容......."
            android:textColor="#1e1e1e"
            android:textSize="16dip" />
    </LinearLayout>
</RelativeLayout>