<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.RankShareActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="12dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="AI育婴"
            android:textColor="#1e1e1e"
            android:textSize="18dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_marginRight="15dip"
                android:text="分享"
                android:textColor="#1e1e1e"
                android:textSize="18dip" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_back">

        <RelativeLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF74BA">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="20dip"
                android:layout_marginRight="15dip"
                android:layout_marginBottom="32dip"
                android:background="@drawable/shape_device_remind_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="56dip"
                        android:layout_height="56dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginTop="16dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="13.5dip"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dip"
                            android:text="大宝"
                            android:textColor="#1e1e1e"
                            android:textSize="20dip"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dip"
                            android:text="2019.08.23-2019.08.29"
                            android:textColor="#999999"
                            android:textSize="12dip" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_dingbu_beijing"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总成长值排名："
                            android:textColor="#ffffff"
                            android:textSize="14dip" />

                        <TextView
                            android:id="@+id/all_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="211"
                            android:textColor="#ffffff"
                            android:textSize="20dip"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名"
                            android:textColor="#ffffff"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本周成长值排名："
                            android:textColor="#ffffff"
                            android:textSize="14dip" />

                        <TextView
                            android:id="@+id/week_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="91"
                            android:textColor="#ffffff"
                            android:textSize="20dip"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名"
                            android:textColor="#ffffff"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="历史总更换尿布："
                            android:textColor="#ffffff"
                            android:textSize="14dip" />

                        <TextView
                            android:id="@+id/all_change_urine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="187"
                            android:textColor="#ffffff"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="次"
                            android:textColor="#ffffff"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="宝宝历史总尿量："
                            android:textColor="#ffffff"
                            android:textSize="14dip" />

                        <TextView
                            android:id="@+id/all_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000"
                            android:textColor="#ffffff"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ml"
                            android:textColor="#ffffff"
                            android:textSize="14dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dip"
                        android:layout_marginBottom="26dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总计签到次数："
                            android:textColor="#ffffff"
                            android:textSize="14dip" />

                        <TextView
                            android:id="@+id/all_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="46"
                            android:textColor="#ffffff"
                            android:textSize="14dip"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="次"
                            android:textColor="#ffffff"
                            android:textSize="14dip" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="86dip"
                    android:layout_marginTop="16dip"
                    android:text="评语："
                    android:textColor="#999999"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/commit"
                    android:layout_width="140dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dip"
                    android:layout_marginTop="16dip"
                    android:text="再接再厉，给宝宝 一个更美好的明天。"
                    android:textColor="#999999"
                    android:textSize="15dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="40dip"
                    android:layout_marginBottom="25dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="19dip"
                            android:layout_height="1.5dip"
                            android:layout_marginBottom="12dip"
                            android:background="#999999"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="长按二维码\n加入AI育婴 一同照顾宝宝"
                            android:textColor="#999999"
                            android:textSize="12dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/scan"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_marginRight="15dip"
                            android:background="#f3f3f3"
                            android:src="@mipmap/android_share" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_share_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4e000000"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_select_photo_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_share_1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:src="@mipmap/btn_weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:text="微信好友"
                    android:textColor="#1e1e1e"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:src="@mipmap/btn_pengyouquan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:text="微信朋友圈"
                    android:textColor="#1e1e1e"
                    android:textSize="16dip" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>