<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.baby.MoblieInductActivity">

    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="12dip"
        android:paddingBottom="12dip">

        <ImageView
            android:layout_width="23dip"
            android:layout_height="23dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="手机感应器"
            android:textColor="#1e1e1e"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="320dip"
                    android:layout_height="320dip"
                    android:layout_marginTop="18dip"
                    android:src="@mipmap/img_shiyongbuzou_six" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第一步"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dip"
                    android:gravity="center"
                    android:text="打开手机蓝牙，将手机靠近纸尿裤 夹子，开始搜索连接。"
                    android:textColor="#1e1e1e"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="320dip"
                    android:layout_height="320dip"
                    android:layout_marginTop="18dip"
                    android:src="@mipmap/img_shiyongbuzou_fifth" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第二步"
                    android:textColor="#1e1e1e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dip"
                    android:gravity="center"
                    android:text="打开APP，将手机靠近纸尿裤 夹子，开始搜索连接。"
                    android:textColor="#1e1e1e"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="122dip"
                android:layout_height="48dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="430dip"
                android:layout_marginRight="15dip"
                android:background="@mipmap/btn_zhiyingkuang_zhidaola"
                android:text="知道啦"
                android:textColor="#1e1e1e"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>